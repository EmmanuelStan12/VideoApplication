<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="video"
            type="com.codedev.videoapp.data.models.search_video_response.Video" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:image="@{video}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_video_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/video_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/_15ssp"
                android:textStyle="italic" />

        </FrameLayout>

        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@id/video_time_layout"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@{video.user.name}"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@id/video_user_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/video_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/video_time_layout"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@{video.user.url}"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/_15ssp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textWhite"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>